<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    tools:context=".MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#3F51B5">

    <EditText
        android:id="@+id/edit_text_codigo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Código del producto"
        android:textColorHint="@color/black"
        android:inputType="text" />

    <EditText
        android:id="@+id/edit_text_descripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descripción"
        android:textColorHint="@color/black"
        android:inputType="text" />

    <EditText
        android:id="@+id/edit_text_cantidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cantidad"
        android:textColorHint="@color/black"
        android:inputType="number" />

    <EditText
        android:id="@+id/edit_text_costo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Costo"
        android:textColorHint="@color/black"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/button_agregar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar Producto"
        android:backgroundTint="#FFC107"
        android:textColor="#000000" />

    <Button
        android:id="@+id/button_modificar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modificar Producto"
        android:backgroundTint="#03A9F4"
        android:textColor="#000000" />

    <Button
        android:id="@+id/button_eliminar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eliminar Producto"
        android:backgroundTint="#F44336"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/text_view_resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resultado"
        android:textColor="#FFFFFF"
        android:paddingTop="16dp" />

</LinearLayout>